      %li
        %a{:href => "paso a paso persona natural.pdf", :target => "blank"} Instructivo paso a paso
      %li
        %a{:href => "Lista de recaudos PN.pdf", :target => "blank"} Lista de recaudos
      %li
        %a{:href => "Ficha_persona_natural.docx"} Ficha de identificación del inversor
      %li
        %a{:href => "Separadores Inversor Persona Natural.pdf", :target => "blank"} Modelo de Carpeta
      %li
        %a{:href => "Declaracion_persona_natural.docx"} Declaración jurada
