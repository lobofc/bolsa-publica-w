%tr{ id: "row-#{banner.id}" }
	- if can? :destroy_multiple, Banner
		%td.center.item-check
			= link_to '', admin_banner_path(banner), remote: true, class: 'show-row'
			%input{ type:'checkbox', class: 'filled-in', id: "checkbox-#{banner.id}", 'checklist-model'=>'check', 'checklist-value'=>"#{banner.id}", 'ng-click'=>"selectByCheck(#{@objects.size})"}
			%label{ for: "checkbox-#{banner.id}" }

	%td.center
		= link_to '', admin_banner_path(banner, search: @query), remote: true, class: 'show-row'
		%span
			= image_tag banner.banner, style: 'height: 50px'
	%td.center.btn-w5
		= link_to admin_banner_path(banner), class: 'btn-floating waves-effect btn-flat', 'data-toggle': 'tooltip', 'data-placement': 'bottom', title: 'Show' do
			= material_icon.md_24.remove_red_eye.css_class('md-dark')
	- if can? :update, Banner
		%td.center.btn-w5
			= link_to edit_admin_banner_path(banner), class: 'btn-floating btn-flat tooltipped', 'data-toggle': 'tooltip', 'data-placement': 'bottom', title: 'Edit' do
				= material_icon.md_18.create.css_class('md-dark')
	- if can? :clone, Banner
		%td.center.btn-w5
			= link_to admin_banner_clone_path(banner), class: 'btn-floating waves-effect btn-flat', 'data-toggle': 'tooltip', 'data-placement': 'bottom', title: 'Clone' do
				= material_icon.md_24.content_copy.css_class('md-dark')
	- if can? :delete, Banner
		%td.center.btn-w5{style:'padding-right: 20px'}
			= link_to admin_banner_path(banner), class: 'btn-floating btn-flat tooltipped', 'data-toggle': 'tooltip', 'data-placement': 'bottom', title: 'Delete', method: :delete, data: { confirm: t('keppler.messages.data_confirm') } do
				= material_icon.md_18.delete.css_class('md-dark')
