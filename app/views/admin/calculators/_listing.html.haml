%tr{ id: "row-#{calculator.id}" }
	- if can? :destroy_multiple, Calculator
		%td.center.item-check
			= link_to '', admin_calculator_path(calculator), remote: true, class: 'show-row'
			%input{ type:'checkbox', class: 'filled-in', id: "checkbox-#{calculator.id}", 'checklist-model'=>'check', 'checklist-value'=>"#{calculator.id}", 'ng-click'=>"selectByCheck(#{@objects.size})"}
			%label{ for: "checkbox-#{calculator.id}" }

	%td.center
		= link_to '', admin_calculator_path(calculator, search: @query), remote: true, class: 'show-row'
		%span
			= calculator.name
	%td.center
		= link_to '', admin_calculator_path(calculator, search: @query), remote: true, class: 'show-row'
		%span
			= calculator.value
	%td.center.btn-w5
		= link_to admin_calculator_path(calculator), class: 'btn-floating waves-effect btn-flat', "data-toggle" => 'tooltip', "data-placement" => 'bottom', title: 'Show' do
			= material_icon.md_24.remove_red_eye.css_class('md-dark')
	- if can? :update, Calculator
		%td.center.btn-w5
			= link_to edit_admin_calculator_path(calculator), class: 'btn-floating btn-flat', "data-toggle" => 'tooltip', "data-placement" => 'bottom', title: 'Edit' do
				= material_icon.md_18.create.css_class('md-dark')
	- if can? :clone, Calculator
		%td.center.btn-w5
			= link_to admin_calculator_clone_path(calculator), class: 'btn-floating waves-effect btn-flat', "data-toggle" => 'tooltip', "data-placement" => 'bottom', title: 'Clone' do
				= material_icon.md_24.content_copy.css_class('md-dark')
	- if can? :delete, Calculator
		%td.center.btn-w5{style:'padding-right: 20px'}
			= link_to admin_calculator_path(calculator), class: 'btn-floating btn-flat', "data-toggle" => 'tooltip', "data-placement" => 'bottom', title: 'Delete', method: :delete, data: { confirm: t('keppler.messages.data_confirm') } do
				= material_icon.md_18.delete.css_class('md-dark')
